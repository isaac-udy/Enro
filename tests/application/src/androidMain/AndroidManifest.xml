            android:supportsPictureInPicture="true"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation" />

        <activity android:name="dev.enro.tests.application.SimpleActivity" />

        <activity android:name="dev.enro.tests.application.fragment.FragmentPresentationActivity"/>
        <activity android:name="dev.enro.tests.application.fragment.FragmentPresentationActivityPresentableActivity"/>
        <activity android:name="dev.enro.tests.application.window.SimpleWindowActivity" />
        <activity android:name="dev.enro.tests.application.fragment.FragmentAnimationsActivity" />
